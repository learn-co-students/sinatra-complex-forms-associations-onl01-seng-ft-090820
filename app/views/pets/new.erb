<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
    <label>Name: </br>
        <input type="text" name="pet[name]" id="pet_name">
    </label>
    </br>

    <p>Select an existing owner or create a new one below.</p>

    <h3>Owners:</h3>
        <% @owners.each do |o| %>
            <input type="radio" name="pet[owner_id]"
            id="<%= o.id %>" value="<%= o.id %>">
            <%= o.name %>
        <% end %>
        </br>
    
    <h3>New Owner</h3>
        <label>Owner Name:
            <input type="text" name="owner[name]" id="owner_name">
        </label>
        </br>
        </br>

    <input type="submit" value="Create Pet">
</form>