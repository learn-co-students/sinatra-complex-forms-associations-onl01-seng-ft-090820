<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

<form method = "POST" action = "/pets/<%= @pet.id %>">

    <input id="hidden" type="hidden" name="_method" value="patch">

    <label>Name: </br>
        <input type = "text" name="pet[name]"
        id="pet_name" value="<%= @pet.name %>">
    </label>
    </br>

    <p>Select an existing owner or create a new one below.</p>

    <h3>Owners: </h3>
    <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id]"
        id="<%= owner.id %>" value="<%= owner.id %>"
        <%= 'checked' if @pet.owner_id == owner.id %>>
        <%= owner.name %>
        </br>
    <% end %>
    </br>

    <h3>New Owner</h3>
    <label>Owner Name: </br>
            <input type="text" name="owner[name]" id="owner_name">
        </label>
        </br>
        </br>

    <input type="submit" value="Update Pet">
</form>

