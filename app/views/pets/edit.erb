<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Edit Name:</label>
  <br>
  <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name"><br>
  <br>
  
  Select owner from existing or create a new one<br><br>

  <p><label>Existing Owners:</label>
  <br>
  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>>
    <%= owner.name %></input><br>
  <% end %>
  </p>

  Create New Owner
  <br>
  <label>Owner Name: </label>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>
  <input type="submit" value="Update Pet">
  </form>

